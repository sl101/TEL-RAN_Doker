# Используем базовый образ Node.js
FROM node

# Устанавливаем рабочую директорию в контейнере
WORKDIR /app

# Копируем файл index.html в контейнер
COPY package.json ./

# Первоначальный запуск приложение - установка зависимостей
RUN npm install

# Копируем все файлы в контейнер
COPY . .

# Определяем порт, который будет использоваться в контейнере
EXPOSE 8000

# Запускаем команду для запуска приложения
CMD ["node", "index.js"]